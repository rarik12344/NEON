{
  "version": 2,
  "public": true,
  "headers": [
    {
      "source": "/.well-known/farcaster.json",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/frame",
      "destination": "/api/frame"
    },
    {
      "source": "/api/webhook",
      "destination": "/api/webhook"
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/webhook",
      "headers": {
        "Content-Type": "application/json"
      }
    },
    {
      "src": "/api/frame",
      "methods": ["POST", "GET"],
      "dest": "/api/frame"
    },
    {
      "src": "/.well-known/farcaster.json",
      "dest": "/.well-known/farcaster.json",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ],
  "build": {
    "env": {
      "NEXT_PUBLIC_BASE_URL": "https://neon-xi.vercel.app",
      "NEXT_PUBLIC_CONTRACT_ADDRESS": "0x6927648b3114B8B54FA5476Ec3BC3A52f1ab513B",
      "NEXT_PUBLIC_CHAIN_ID": "8453"
    }
  },
  "functions": {
    "api/webhook": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/frame": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "regions": ["cle1"]
}
